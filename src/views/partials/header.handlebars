<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .carousel-inner img {
            width: 100%;
            height: 400px;
            object-fit: contain;
        }
        .encabezado {
            background-color: #343a40;
        }
        .encabezado .navbar-nav .nav-item .nav-link {
            color: white;
            font-weight: bold;
            margin-left: 15px;
        }
        .encabezado .navbar-nav .nav-item .nav-link:hover {
            color: #d4d4d4;
        }
        .encabezado .navbar-brand {
            color: white;
            font-weight: bold;
        }
        .search-bar-container {
            flex-grow: 1;
            display: flex;
            justify-content: center;
        }
        .search-bar {
            display: flex;
            align-items: center;
            width: 800px; /* Default width for larger screens */
        }
        .search-bar input {
            border-radius: 20px;
            border: 1px solid #ced4da;
            padding: 8px 15px;
            font-size: 1rem;
            width: 100%;
        }
        .search-bar button {
            margin-left: 10px;
            border: none;
            background: transparent;
            cursor: pointer;
        }
        .search-bar button img {
            width: 30px; /* Adjust size as needed */
            height: 30px;
        }
        .welcome-message {
            text-align: center;
            margin-top: 30px;
            margin-bottom: 30px;
        }
        .welcome-message h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }
        .welcome-message p {
            font-size: 1.25rem;
            color: #555;
        }
        /* Media queries for responsiveness */
        @media (max-width: 1200px) {
            .search-bar {
                width: 600px; /* Adjust width for medium screens */
            }
        }
        
        @media (max-width: 992px) {
            .search-bar {
                width: 100%; /* Full width on smaller screens */
                flex-direction: column;
                align-items: stretch;
            }
            .search-bar input {
                margin-bottom: 10px;
            }
            .search-bar button {
                margin-left: 0;
                margin-top: 5px;
            }
            .search-bar button img {
                width: 25px; /* Smaller icon size */
                height: 25px;
            }
        }
        
        @media (max-width: 768px) {
            .search-bar {
                width: 100%; /* Full width on mobile screens */
                padding: 0 10px; /* Add padding on mobile screens */
            }
            .search-bar input {
                padding: 10px 15px;
            }
            .container{
                height:65vh;
            }
        }
    </style>
    <title>Image Carousel</title>
</head>
<body>
    <!-- Custom Header -->
    <header class="navbar navbar-expand-lg encabezado">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">VapeLife</a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <nav class="collapse navbar-collapse d-flex align-items-center" id="navbarNav">
                <!-- Search Bar for Larger Screens -->
                <div class="search-bar-container d-none d-lg-flex">
                    <form class="search-bar" action="/search" method="GET">
                        <input type="text" class="form-control" name="query" placeholder="Search...">
                        <button type="submit">
                            <img src="/header/searching.png" alt="Search"> <!-- Local image as button -->
                        </button>
                    </form>
                </div>
                
                <!-- Search Bar for Smaller Screens -->
                <div class="search-bar-container d-flex d-lg-none">
                    <form class="search-bar" action="/search" method="GET">
                        <input type="text" class="form-control" name="query" placeholder="Search...">
                        <button type="submit">
                            <img src="/images/searching.png" alt="Search"> <!-- Local image as button -->
                        </button>
                    </form>
                </div>
                
                <!-- Navbar Links -->
                <ul class="navbar-nav ms-auto d-flex align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/api/users/profile">Account</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Welcome Message -->
    <div class="container">
        <div class="welcome-message">
            <h1>Welcome to Our Vape Store!</h1>
            <p>Enjoy browsing our collection of products.</p>
        </div>

        <!-- Carousel -->
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/public/images/best.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/public/images/flavors.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/public/images/snow-wolf-mini.jpg" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
